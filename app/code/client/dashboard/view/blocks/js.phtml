<script type="text/javascript">
	$(document).ready(function() {
		updateTodayHours();
		var todayTotalHours = setInterval(function() {
			updateTodayHours();
		},  5000);
	});

	/**
	 *	Var Loggers
	 */
	function logs( str, alert = false ){
		if( alert ) {
			alert( str );
			return;
		}
		console.log( str );
		return;
	}

	/**
	 *	Update today hour
	 */
	function updateTodayHours() {
		$.getJSON("<?=Core::getBaseUrl()?>api/toggl/todayTotalHours", function(data) {
			$("#todayTotalHours").text(data.hrs);
		});
	}
</script>